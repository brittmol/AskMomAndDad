extends layout
include utils
block content
    +validationErrorSummary(errors)
    div#question-box.post
      img.user-icon(src='../stylesheets/userIcon.jpg')
      span.span-css= question.User.username
      span.cat= question.Category.category
      span.singlequestion-title= question.title
      p.con= question.content
      if userId === question.User.id
        form(action=`/questions/${question.id}/delete` method="post")
          input(type="hidden" name="_csrf" value=csrfToken)
          div.edit-delete
            button.single-question-delete-button(id=`question-delete-${question.id}` type="submit") Delete
          //- button(type="submit") Edit
        //- button(type="submit") Edit
        //- button(type="submit").delete-btn Delete
    div#answer-box
      form(action=`/questions/${question.id}` method='post')
       input(type='hidden' name='_csrf' value=csrfToken)
       textarea.answer-content(name='content' value=content placeholder='Type here...')
       br
       button.addanswerbutton(type='submit') Add Answer
    each answer in answers
      div.answer-container(id=`answer-container-${answer.id}`)
        img.user-icon(src='../stylesheets/userIcon.jpg')
        span.span-css= question.User.username
        br
        span.answer-post= answer.content
        div.commentdeletebuttons
          div
            a.comment-css(href=`/answers/${answer.id}`)
              img.commenticon(src='../stylesheets/chatbubble.jpg')
          div.edit-delete
            if userId === answer.User.id
              button(id=`answer-delete-${answer.id}` type="submit").delete-ans-btn Delete
            //- button(type="submit") Edit
