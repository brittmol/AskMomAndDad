doctype html
html
  head
      block head
        title="ASKMOM&DAD"
        link(rel='stylesheet' href='/stylesheets/index.css')
        script(src="/javascripts/index.js" type="module" defer)
  body
      block content
        include utils.pug
        div#slogan
          <span style="color: black">Sometimes you just gotta</span>
          br
          <span style="color: rgb(185, 43, 39)"> #askmom&dad</span>
        img(src="../stylesheets/laptoprender.png")
        div#splash
          h1 Login
          +validationErrorSummary(errors)
          form(action='/users/login' method='post')
            input(type='hidden' name='_csrf' value=csrfToken)
            +field('', 'username', user.username, placeholder = "Username")
            br
            +field('', 'password', '', 'password', placeholder = "Password")
            div#splashbutton
              button(type='submit') Login
          div#splashbutton
            form(action='/users/loginDemo' method='post')
                button(type='submit') Demo
          div#splashbutton
            p: a(href='/users/signup') Don't have an account?
