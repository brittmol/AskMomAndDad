doctype html
html
  head
      block head
        title="ASKMOM&DAD"
        link(rel='stylesheet' href='/stylesheets/index.css')
        script(src="/javascripts/index.js" type="module" defer)
  body
      .container
        .background-image
          block content
            include utils.pug
            div#slogan
              span Sometimes you just gotta
              span#hash #askMom&Dad
            div#centerSplash
            div#splash
              h1 Sign Up
              +validationErrorSummary(errors)
              div#signUpForm
                form(action='/users/signup' method='post')
                  input(type='hidden' name='_csrf' value=csrfToken)
                  +field('', 'username', user.username, placeholder = "Username")
                  br
                  +field('', 'email', user.email, placeholder = "Email")
                  br
                  +field('', 'password', user.password, 'password', placeholder = "Password")
                  br
                  +field('', 'confirmPassword', '', 'password', placeholder = "Confirm Password")
                  div#registerButton
                    button(type='submit') Register
                  div#splashbutton
                    p#accountAlready: a(href='/') Have an account already?
